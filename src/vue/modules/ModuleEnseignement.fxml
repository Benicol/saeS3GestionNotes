<?import javafx.scene.layout.*?>

<HBox spacing="16.0" styleClass="grade-info-band" stylesheets="@../style.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox spacing="4.0" HBox.hgrow="ALWAYS">
         <children>
            <HBox spacing="8.0" VBox.vgrow="ALWAYS">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="title" text="Nom de l'enseignement">
                     <font>
                        <Font name="Verdana Bold" size="24.0" />
                     </font>
                  </Text>
               </children>
            </HBox>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Type d'enseignement">
               <font>
                  <Font name="Verdana Bold" size="16.0" />
               </font>
            </Text>
         </children>
      </VBox>
      <HBox alignment="CENTER_RIGHT" spacing="16.0" HBox.hgrow="ALWAYS">
         <children>
            <HBox alignment="CENTER">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="17.23">
                     <font>
                        <Font name="Verdana Bold" size="24.0" />
                     </font>
                  </Text>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="/20">
                     <font>
                        <Font name="Verdana Bold" size="24.0" />
                     </font>
                  </Text>
               </children>
            </HBox>
            <Button mnemonicParsing="false" prefHeight="40.0">
               <graphic>
                  <ImageView pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../ressources/icone_voir.png" />
                     </image>
                  </ImageView>
               </graphic>
               <styleClass>
                  <String fx:value="button" />
                  <String fx:value="secondary-button" />
               </styleClass>
            </Button>
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</HBox>
