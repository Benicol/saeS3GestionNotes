<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import java.net.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<HBox spacing="16.0" styleClass="grade-info-band" stylesheets="@../vue/style.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox spacing="4.0" HBox.hgrow="ALWAYS">
         <children>
            <HBox alignment="CENTER_LEFT" spacing="8.0">
               <children>
                  <HBox alignment="CENTER_LEFT" prefWidth="291.0">
                     <children>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Description de l'évaluation  : ">
                           <font>
                              <Font name="Verdana Bold" size="16.0" />
                           </font>
                        </Text>
                     </children>
                  </HBox>
                  <TextField style="-fx-padding: 0 0 0 8px;" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="8.0">
               <children>
                  <HBox alignment="CENTER_LEFT">
                     <children>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Pondération (en pourcentage) : ">
                           <font>
                              <Font name="Verdana Bold" size="16.0" />
                           </font>
                        </Text>
                     </children>
                  </HBox>
                  <TextField style="-fx-padding: 0 0 0 8px;" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="8.0">
               <children>
                  <HBox alignment="CENTER_LEFT" prefWidth="291.0">
                     <children>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Date (facultatif) :">
                           <font>
                              <Font name="Verdana Bold" size="16.0" />
                           </font>
                        </Text>
                     </children>
                  </HBox>
                  <TextField style="-fx-padding: 0 0 0 8px;" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
         </children>
      </VBox>
      <HBox alignment="CENTER_RIGHT" spacing="16.0">
         <children>
            <HBox alignment="CENTER" spacing="4.0">
               <children>
                  <Button maxHeight="40.0" mnemonicParsing="false" styleClass="primary-button">
                     <graphic>
                        <ImageView pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../ressources/icone_supprimer.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
               </children>
            </HBox>
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</HBox>
