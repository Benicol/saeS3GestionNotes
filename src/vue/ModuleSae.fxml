<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<HBox spacing="16.0" styleClass="grade-info-band" stylesheets="@../vue/style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="title" text="Note : " HBox.hgrow="ALWAYS">
         <font>
            <Font name="Verdana Bold" size="24.0" />
         </font>
      </Text>
      <HBox alignment="CENTER_RIGHT" spacing="16.0" HBox.hgrow="ALWAYS">
         <children>
            <HBox alignment="CENTER" spacing="4.0">
               <children>
                  <TextField alignment="CENTER_RIGHT" prefWidth="164.0" promptText="Saisir une note" style="-fx-padding: 0 0 0 8px;" HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </TextField>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="/20">
                     <font>
                        <Font name="Verdana Bold" size="24.0" />
                     </font>
                  </Text>
               </children>
            </HBox>
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</HBox>
